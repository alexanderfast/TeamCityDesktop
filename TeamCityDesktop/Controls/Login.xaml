<UserControl x:Class="TeamCityDesktop.Controls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:TeamCityDesktop="clr-namespace:TeamCityDesktop"
             Width="Auto"
             Height="Auto"
             MinWidth="420"
             MinHeight="240">
	<Grid HorizontalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="40" />
			<!-- image -->
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="40" />
			<!-- textboxes -->
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto"
			                  MinWidth="40" />
		</Grid.ColumnDefinitions>
		<Image Grid.Column="1"
		       Source="../Images/TeamCityLogo.png"
		       Stretch="None" />
		<DockPanel Grid.Column="3"
		           VerticalAlignment="Center"
		           LastChildFill="True">
			<Button HorizontalAlignment="Center"
			        DockPanel.Dock="Bottom"
			        Content="_Login"
			        Padding="14 4"
			        Command="{x:Static TeamCityDesktop:Commands.Connect}" />
			<ContentPresenter Content="{Binding Server}" />
		</DockPanel>
	</Grid>
</UserControl>